<%- layout('layouts/main.ejs') %>

<div class="row">
    <div class="col-md-4 offset-md-4">
        <div class="card mt-4 text-center">
            <div class="card-header">
                Signup
            </div>
            <div class="card-body">
                <form action="/signup" method="POST">
                    <div class="form-group">
                        <input type="email" name="email" placeholder="insert email" class="form-control">
                    </div>
                    <div class="form-group">
                        <input type="password" name="password" placeholder="insert password" class="form-control">
                    </div>
                    <button type="submit" class="btn btn-primary btn-block mt-5">Signup</button>
                </form>
            </div>
        </div>
    </div>
</div>

